<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:visibility="visible">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:contentDescription="@string/todo"
        android:src="@drawable/_043273_animal_avatar_mutton_sheep_113242"
        android:scaleType="centerCrop"
        android:background="@drawable/_043273_animal_avatar_mutton_sheep_113242"
        />

    <EditText
        android:id="@+id/et1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:autofillHints=""

        android:inputType="textEmailAddress"
        android:hint="E-posta giriniz"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="288dp" />

    <EditText
        android:id="@+id/et2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"

        android:password="true"
        android:hint="@string/parola"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="348dp" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tw1"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:text="@string/tema"
            android:textColor="#000000"
            android:textStyle="bold" />


        <RadioGroup
            android:id="@+id/rgroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbtn1"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:checked="true"

                android:text="@string/a_k"
                android:textIsSelectable="false"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rbtn2"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:text="@string/koyu"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RadioGroup>


    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"

        android:text="@string/giri_yap"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:backgroundTint="@color/button" />


</LinearLayout>
